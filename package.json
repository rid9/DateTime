{
    "name": "datetime",
    "displayName": "Date & Time",
    "description": "Displays a clock and date information in the status bar.",
    "version": "2.1.1",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rid9/DateTime.git"
    },
    "bugs": "https://github.com/rid9/DateTime/issues",
    "icon": "images/icon.png",
    "publisher": "rid9",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "browser": "./out/extension.js",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Date & Time",
            "properties": {
                "dateTime.showOnStartup": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show date & time on startup."
                },
                "dateTime.use24HourClock": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use a 24 hour clock.",
                    "dateTime_example": "**18**:43"
                },
                "dateTime.showAMPM": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show AM/PM.",
                    "dateTime_example": "7:43 **PM**"
                },
                "dateTime.showDayOfWeek": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the day of the week.",
                    "dateTime_example": "**Fri** 1 Jul"
                },
                "dateTime.showDayOfMonth": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the day of the month.",
                    "dateTime_example": "Fri **1** Jul"
                },
                "dateTime.showMonth": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the month.",
                    "dateTime_example": "Fri 1 **Jul**"
                },
                "dateTime.showHours": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show hours.",
                    "dateTime_example": "**18**:43"
                },
                "dateTime.showMinutes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show minutes.",
                    "dateTime_example": "18:**43**"
                },
                "dateTime.showSeconds": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show seconds.",
                    "dateTime_example": "18:43:**12**"
                },
                "dateTime.padDays": {
                    "type": "boolean",
                    "default": false,
                    "description": "Pad the day of the month with a leading 0.",
                    "dateTime_example": "Fri **01** Jul"
                },
                "dateTime.padHours": {
                    "type": "boolean",
                    "default": true,
                    "description": "Pad hours with a leading 0.",
                    "dateTime_example": "**09**:43"
                },
                "dateTime.padMinutes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Pad minutes with a leading 0.",
                    "dateTime_example": "18:**03**"
                },
                "dateTime.padSeconds": {
                    "type": "boolean",
                    "default": true,
                    "description": "Pad seconds with a leading 0.",
                    "dateTime_example": "18:43:**04**"
                },
                "dateTime.locale": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Date & time locale.",
                    "dateTime_example": "es-us"
                },
                "dateTime.flashTimeSeparators": {
                    "type": "boolean",
                    "default": false,
                    "description": "Flash the time separators."
                },
                "dateTime.timeSeparator": {
                    "type": "string",
                    "default": ":",
                    "description": "Time separator character."
                },
                "dateTime.timeSeparatorOff": {
                    "type": "string",
                    "default": " ",
                    "description": "Flashing time separator character."
                },
                "dateTime.customFormat": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Use a custom date & time format."
                },
                "dateTime.clipboardFormat": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Use a custom date & time format when copying."
                },
                "dateTime.fractionalPrecision": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "default": null,
                    "description": "Update interval divisor for fractional seconds.",
                    "minimum": 1,
                    "maximum": 100
                },
                "dateTime.statusBarAlignment": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "right",
                    "description": "Status bar alignment, left or right.",
                    "dateTime_example": "left",
                    "enum": [
                        "left",
                        "right"
                    ]
                },
                "dateTime.statusBarPriority": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "default": null,
                    "description": "Status bar priority. Higher means more to the left.",
                    "dateTime_example": "10"
                },
                "dateTime.displayPrefix": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Prepend a string to the displayed time.",
                    "dateTime_example": "Time:"
                },
                "dateTime.displaySuffix": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Append a string to the displayed time.",
                    "dateTime_example": "."
                }
            }
        },
        "commands": [
            {
                "command": "dateTime.show",
                "title": "Show Date & Time"
            },
            {
                "command": "dateTime.hide",
                "title": "Hide Date & Time"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile && node ./doc.js",
        "compile": "bash ./compile.sh",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "esbuild": "^0.13.8",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "dayjs": "^1.10.7"
    }
}
